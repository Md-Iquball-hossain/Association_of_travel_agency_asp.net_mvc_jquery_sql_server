
<script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
<script src="~/Scripts/moment.js"></script>
<script src="~/Scripts/knockout-date-bindings.js"></script>
<script src="~/Areas/HRM/Scripts/Employee/employeeSalWiseEmployee.js"></script>
<link href="~/Content/customassets/css/Cart.css" rel="stylesheet" />
@{
    ViewBag.Title = "Employee List by Salary";
    Layout = "~/Views/Shared/_LayoutjqGrid.cshtml";
}

<div class="panel">
    <br />
    <div class="panel-body">
        <div class="container-fluid ">

            <div id="historyDiv">

                <div class="form-group row row_design">
                    <label class="control-label col-sm-offset-1 col-sm-2"><span class="select">Starting Amount :</span></label>
                    <div class="col-sm-2">
                        <input type="text" data-bind="value:FromAmount" class="form-control" placeholder="Strating Amount" />
                    </div>
                    <label class="control-label col-sm-offset-1 col-sm-2"><span class="select">Ending Amount :</span></label>
                    <div class="col-sm-2">
                        <input type="text" data-bind="value:ToAmount" class="form-control" placeholder="Ending Amount" />
                    </div>
                    <div class="col-sm-1">
                        <button type="submit" class="btn btn-deepgreen" data-bind="click:Search">Search</button>
                    </div>
                </div>
                <br />
                <br />
                <h4>Export Report</h4>
                <div class="form-group">

                    <a target="_blank" data-bind="attr: { href: Link1, title1: 'PDF' }">PDF</a>
                    <a target="_blank" data-bind="attr: { href: Link2, title2: 'Excel' }">Excel</a>
                    <a target="_blank" data-bind="attr: { href: Link3, title3: 'Word' }">Word</a>

                </div>
                <br />

                <table class="table table-striped table-bordered">
                    <thead class="headcolor">
                        <tr>
                            <th>Index</th>
                            <th>Employee Name</th>
                            <th>Designation</th>
                            <th>GenderName</th>
                            <th>Office Unit</th>
                            <th>Office</th>
                            <th>Salary</th>
                            @*<th>FromDate</th>
                                <th>ToDate</th>*@
                        </tr>
                    </thead>
                    <tbody data-bind="foreach:Employees">
                        <tr>
                            <td class="center" data-bind="text: $index() + 1"></td>
                            <td class="center" data-bind="text: EmployeeName"></td>
                            <td class="center" data-bind="text: DesignationName"></td>
                            <td class="center" data-bind="text: GenderName"></td>
                            <td class="center" data-bind="text: OfficeUnitName"></td>
                            <td class="center" data-bind="text: OfficeName "></td>
                            <td class="center" data-bind="text: TotalAmount "></td>
                            @*<td class="center" data-bind="text: moment(FromDate).format('DD/MMM/YYYY')"></td> EmployeeTypeName
                                <td class="center" data-bind="text: moment(ToDate).format('DD/MMM/YYYY') "></td>*@
                        </tr>
                    </tbody>
                </table>


            </div>
            <div class="form-group row row_design">

                <div id="myModal" class="modal fade" role="dialog">
                    <div class="modal-dialog modal-sm">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Confirmation</h4>
                            </div>
                            @*<div class="modal-body" align="center">
                                    <p>Do you want to save Receive List?</p>
                                    <button type="submit" class="btn btn-success" data-bind="click: Submit" data-dismiss="modal">Yes</button>
                                    <button type="button" class="btn btn-success" data-dismiss="modal">No</button>

                                </div>*@
                            <div class="modal-footer">
                            </div>
                        </div>

                    </div>
                </div>

            </div>

            <!-- Success Modal -->
            <div class="form-group row row_design">

                <div id="successModal" class="modal fade" role="dialog">
                    <div class="modal-dialog modal-sm">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Response</h4>
                            </div>
                            <div class="modal-body" align="center">
                                <p id="successModalText"></p>

                                <button type="button" class="btn btn-success" data-dismiss="modal">Ok</button>

                            </div>
                            <div class="modal-footer">
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>
</div>





