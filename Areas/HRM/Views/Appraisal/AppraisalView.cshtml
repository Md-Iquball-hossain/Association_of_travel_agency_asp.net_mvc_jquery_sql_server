<div class="panel">
    <div class="panel-heading">
         <header class="panel-title">Appraisal View</header>
     </div>
    <br/>
    <div class="panel-body">
        <div class="container-fluid">
            <div id="appraisalInterface">

                <div class="form-group row row_design">

                    <label class="col-sm-offset-1 col-sm-2 control-label" for="DesignationId">Designation<span class="required">*</span> :</label>

                    <div class="col-sm-3" data-bind="validationElement:DesignationId">
                        <select class="form-control" id="designation" data-bind="options:DesignationList,
                    optionsValue: 'Id',
                    optionsText:'Name',
                    optionsCaption:'--Select--',
                    value:DesignationId
                "></select>
                    </div>

                    <label class="control-label col-sm-2" for="PeriodFrom">Period From<span class="required">*</span> :</label>

                    <div class="col-sm-3 date">
                        <input type="date" data-bind="date:PeriodFrom" class="form-control" name="PeriodFrom" />

                    </div>
                </div>
                <div class="form-group row row_design">
                    <label class="col-sm-offset-1 col-sm-2 control-label" for="PeriodTo">Period To<span class="required">*</span> :</label>

                    <div class="col-sm-3 date">
                        <input type="date" data-bind="date:PeriodTo" class="form-control" name="PeriodTo" />

                    </div>
                </div>
                <br/>
                <span data-bind="validationMessage: GrpTotal" class="validationMessage" style="color:red;font-weight:bold;"></span>
                <table class="table table-striped table-bordered">
                    <thead class="headcolor">
                        <tr>
                            <th>#</th>
                            <th>KPI Group</th>
                            <th></th>
                            <th>Group Weight(100)</th>
                            <!--<input type="hidden" name="hiddenPhone" />-->
                        </tr>
                    </thead>
                    <tbody data-bind="foreach:KPIGroupList">
                        <tr>
                            <td><input type="hidden" data-bind="value: Id" /></td>

                            <td class="center"><input type='checkbox' data-bind="checked: IsGroupSelected, valueUpdate: 'keyup'" /></td>
                            <td class="center" data-bind="text:Name"></td>
                            <td class="center"><input class="form-control" type="text" data-bind="value:KPIGroupWeight,enable:IsGroupSelected,valueUpdate: 'keyup'" /></td>

                            <td class="center">
                                <span data-bind="validationMessage: KPITotal" class="validationMessage" style="color:red;font-weight:bold;"></span>
                                <table class="table table-striped table-bordered">
                                    <thead class="headcolor">
                                        <tr>
                                            <th></th>
                                            <th>KPI</th>
                                            <th></th>
                                            <th>KPI Weight(100)</th>
                                        </tr>
                                    </thead>
                                    <tbody data-bind="foreach:KPIList">
                                        <tr>
                                            <td><input type="hidden" data-bind="value: Id" /></td>
                                            <td class="center"><input type='checkbox' data-bind="checked: IsKPISelected,enable:$parent.IsGroupSelected, valueUpdate: 'keyup'" /></td>
                                            <td class="center" data-bind="text:Name"></td>
                                            <td class="center"><input class="form-control" type="text" data-bind="value:KpiWeight,enable:IsKPISelected,valueUpdate: 'keyup'" /></td>
                                        </tr>
                                    </tbody>

                                </table>
                            </td>
                        </tr>

                    </tbody>
                </table>

                <br/>
                <div class="form-group row row_design">
                    <div class="col-sm-offset-10 col-sm-2">
                        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal">Save</button>
                    </div>
                    <div id="myModal" class="modal fade" role="dialog">
                        <div class="modal-dialog modal-sm">

                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Confirmation</h4>
                                </div>
                                <div class="modal-body" align="center">
                                    <p>Do you want to save this Setup?</p>
                                    <button type="submit" class="btn btn-success" data-bind="click:Submit" data-dismiss="modal">Yes</button>
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>

                                </div>
                                <div class="modal-footer">
                                </div>
                            </div>

                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
