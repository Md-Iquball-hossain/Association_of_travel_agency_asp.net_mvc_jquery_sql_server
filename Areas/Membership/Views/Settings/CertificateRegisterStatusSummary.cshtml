@{
    Layout = "~/Views/Shared/_LayoutjqGrid.cshtml";
    ViewBag.Title = "Certificate Book Status";
    var CompanyId = ViewBag.CompanyId;
}

@*<link href="~/Content/customStyle.css" rel="stylesheet" />*@
<script src="~/Scripts/moment.js"></script>
<script src="~/Scripts/knockout-date-bindings.js"></script>
<link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>
<script src="~/Scripts/KoCustomDateTimePicker.js"></script>
<script>
    var userCompanyId = parseInt(@CompanyId);
</script>
<script src="~/Areas/Membership/Scripts/Settings/certificate-book-status-summary.js"></script>
<link href="~/Content/customassets/css/Cart.css" rel="stylesheet" />

<style>
    .form-control {
        width: 100% !important;
    }

    .btnLarge {
        width: 140px !important;
    }

    .input-group-addon {
        padding: 0 5px;
    }

    .rm {
        background-color: #F8F8F8;
        border-radius: 0px 0px 0px 0px !important;
    }
</style>

<section class="rm">
    <div class="panel-body">
        <div class="container-fluid">
            <div class="row">

                <!---vvvvvvv----Body Main Starts here---vvvvvv----->

                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-12">


                            <div id="ChequebookSummaryStatusDiv">


                                <div class="form-group row row_design">
                                    @if (CompanyId == null)
                                    {
                                        <label class="control-label col-sm-2 col-sm-offset-1" for="Name">Company</label>
                                        <div class="col-sm-3">
                                            <select data-bind="options: CompanyList, value: CompanyProfileId, optionsValue:'Id', optionsText: 'Name', optionsCaption: 'Choose one...', valueUpdate: 'keyup', event:{ change: loadTypes }" class="form-control"></select>
                                        </div>
                                    }
                                    <label class="control-label col-sm-2" for="CertificateType">Certificate Type</label>
                                    <div class="col-sm-3">
                                        <select data-bind="options: CTypes, value: CertificateType, optionsValue:'Id', optionsText: 'Name', optionsCaption: 'Choose one...', valueUpdate: 'keyup'" class="form-control"></select>
                                    </div>
                                    
                                </div>
                                
                                <div class="form-group row row_design">


                                    <div class="col-sm-offset-10 col-sm-2">
                                        @*<button type="submit" class="btn btn-success" data-toggle="modal" data-target="#myModal">Submit</button>*@
                                        <button type="button" class="btn btn-deepgreen" data-bind="click: getCertificateBookStatusSummary">search</button>
                                    </div>
                                </div>
                                <br />

                                <div class="form-group row row_design">


                                    <!-- loading Modal -->
                                    <div id="loadingModal" class="modal fade" role="dialog">
                                        <div class="modal-dialog modal-sm">

                                            <!-- Modal content-->
                                            <div class="modal-content loading-modal-content">

                                                <div class="modal-body loading-modal-body" align="center">
                                                    <img src="~/Images/loadingTwo.gif" style="max-width:100%;" />
                                                </div>

                                            </div>

                                        </div>
                                    </div>
                                    <!-- loading modal ends-->
                                </div>



                                <div class="form-group table-responsive">

                                    <div class="PrintReport" align="right">

                                        <table class="table table-striped table-bordered">
                                            <thead class="headcolor">
                                                <tr class="thead ">
                                                    <th> Certificate Name </th>
                                                    <th> Pages </th>
                                                    <th> Starting Number </th>
                                                    <th> Un-used </th>
                                                    <th> Issued </th>
                                                    <th> Void </th>
                                                    <th> Ruined </th>
                                                </tr>
                                            </thead>

                                            <tbody data-bind="foreach:CertificateBooks">
                                                <tr>
                                                    <td class="center" data-bind="text: CertificateName"></td>
                                                    <td class="center" data-bind="text: TotalPages"></td>
                                                    <td class="center" data-bind="text: StartingNumber"></td>
                                                    <td class="center" data-bind="text: UnUsedCount "></td>
                                                    <td class="center" data-bind="text: IssuedCount"></td>
                                                    <td class="center" data-bind="text: VoidCount"></td>
                                                    <td class="center" data-bind="text: RuinedCount"></td>
                                                </tr>
                                            </tbody>
                                        </table>

                                    </div>
                                </div>

                            </div>

                            <!---^^^^^^^----Body Main Ends here----^^^^^^^---->

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




