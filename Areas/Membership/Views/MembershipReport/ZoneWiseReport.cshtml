@{
    ViewBag.Title = "Zone Wise Report";
    Layout = "~/Views/Shared/_LayoutjqGrid.cshtml";
}

<link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>
<script src="~/Scripts/KoCustomDateTimePicker.js"></script>
<link href="~/Content/customassets/css/Cart.css" rel="stylesheet" />
<script src="~/Areas/Membership/Scripts/MembershipReport/report.js"></script>

<style>
    .form-control {
        width: 100% !important;
    }

    .btnLarge {
        width: 140px !important;
        border-radius: 4px !important;
    }

    .input-group-addon {
        padding: 0 5px;
    }

    .rm {
        background-color: #F8F8F8;
        border-radius: 0px 0px 0px 0px !important;
    }
</style>


<div>
    <div class="container" id="ReportId">

        <div class="container-fluid rm">

            <fieldset>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group row row_design">

                            <div class="col-sm-2 col-sm-offset-1">
                                <label for="ContactAddress" class="control-label" style="text-align: left;">Select Zone :</label>
                            </div>
                            <div class="col-sm-3">
                                <select data-bind="options: ZoneTypes, value: ZoneId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'Name' " class="form-control"></select>
                            </div>

                            <div class="col-sm-2">
                                <label for="ContactAddress" class="control-label" style="text-align: left;">Select Area :</label>
                            </div>
                            <div class="col-sm-3">
                                <select data-bind="options: AreaTypes, value: AreaId, optionsCaption:'Choose One..', optionsValue:'Id', optionsText: 'Name' " class="form-control"></select>
                            </div>

                        </div>

                        <br />

                        <div class="form-group row row_design">
                            <div class="col-sm-8">

                            </div>

                            <div class="col-sm-1" style="text-align:left">
                                <button class="btn btn-success" data-bind="click:GetZoneWiseMemberListReport">Show</button>
                            </div>

                        </div>

                    </div>
                </div>
            </fieldset>
        </div>


        <br />


    </div>

</div>