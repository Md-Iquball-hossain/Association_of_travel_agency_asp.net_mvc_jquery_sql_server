
@{
    ViewBag.Title = "Event Create";
    Layout = "~/Views/Shared/_LayoutjqGrid.cshtml";
    var CompanyId = ViewBag.CompanyId;
}
<script src="~/Scripts/moment.js"></script>
<script src="~/Scripts/knockout-date-bindings.js"></script>
<link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>
<script src="~/Scripts/KoCustomDateTimePicker.js"></script>
<script>
    var userCompanyId = parseInt(@CompanyId);
</script>
<script src="~/Areas/Membership/Scripts/Settings/EventCreate.js"></script>
@*<script src="~/Areas/Membership/Scripts/Settings/certificateRegister.js"></script>*@
<link href="~/Content/customassets/css/Cart.css" rel="stylesheet" />

<style>
    .form-control {
        width: 100% !important;
    }

    .btnLarge {
        width: 140px !important;
    }

    .input-group-addon {
        padding: 0 5px;
    }

    .rm {
        background-color: #F8F8F8;
        border-radius: 0px 0px 0px 0px !important;
    }
</style>

<section class="rm">

    <div class="row">

        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-12">
                    <div id="EventVm">
                        <div class="form-group row row_design">
                            <label class="control-label col-sm-2 col-sm-offset-1" for="Name">Tittle</label>
                            <div class="col-sm-3">
                                <input type="text" data-bind="value:Tittle" class="form-control" placeholder="Event Tittle" required />
                            </div>
                            <label class="control-label col-sm-2" for="CertificateName">Description</label>
                            <div class="col-sm-3">
                                <textarea cols="29" rows="2" data-bind="value:Description"></textarea>
                            </div>
                        </div>
                        <div class="form-group row row_design">
                            <label class="control-label col-sm-2 col-sm-offset-1" for="CertificateType">Event Palce</label>
                            <div class="col-sm-3">
                                <textarea cols="29" rows="2" data-bind="value:EventAddress"></textarea>
                            </div>
                            <label class="control-label col-sm-2" for="ChequePrefix">Event Type</label>
                            <div class="col-sm-3">
                                <select data-bind="options: MemberType, value: EventType, optionsValue:'Id', optionsText: 'Name', optionsCaption: 'Choose one...'," class="form-control"></select>
                            </div>
                        </div>

                        <div class="form-group row row_design">
                            <label class="control-label col-sm-2 col-sm-offset-1" for="BookIssueDate">Event Date</label>
                            <div class="col-sm-3">
                                <div class="input-group input-group_cif date">
                                    <input type="text" class="form-control" data-bind="datepicker:EventDate, datepickerOptions: {format: 'DD/MM/YYYY'}, valueUpdate:'keyup'">
                                    <span class="help-block" style="display: none;"></span>
                                    <div class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </div>
                                </div>
                            </div>
                            <label class="control-label col-sm-2" for="StartingNumber">Registration Start</label>
                            <div class="col-sm-3">
                                <div class="input-group input-group_cif date">
                                    <input type="text" class="form-control" data-bind="datepicker:RegistrationStartDate, datepickerOptions: {format: 'DD/MM/YYYY'}, valueUpdate:'keyup'">
                                    <span class="help-block" style="display: none;"></span>
                                    <div class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row row_design">
                            <label class="control-label col-sm-2 col-sm-offset-1">Registration Close</label>
                            <div class="col-sm-3">
                                <div class="input-group input-group_cif date">
                                    <input type="text" class="form-control" data-bind="datepicker:RegistrationEndDate, datepickerOptions: {format: 'DD/MM/YYYY'}, valueUpdate:'keyup'">
                                    <span class="help-block" style="display: none;"></span>
                                    <div class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row row_design">
                            <div class="col-sm-offset-10 col-sm-2">
                                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal">Save</button>
                            </div>
                            <div id="myModal" class="modal fade" role="dialog">
                                <div class="modal-dialog modal-sm">
                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">Confirmation</h4>
                                        </div>
                                        <div class="modal-body" align="center">
                                            <p>Do you want to add this item?</p>
                                            <button data-bind="click:SaveEvent" class=" btn btn-success" data-dismiss="modal">Yes</button>
                                            <button type="button" class="btn btn-success" data-dismiss="modal">No</button>
                                        </div>
                                        <div class="modal-footer">

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="successModal" class="modal fade" role="dialog">
                                <div class="modal-dialog modal-sm">
                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">Response</h4>
                                        </div>
                                        <div class="modal-body" align="center">
                                            <p id="successModalText"></p>
                                            <button type="button" class="btn btn-success" data-dismiss="modal">Ok</button>
                                        </div>
                                        <div class="modal-footer">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <br />
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>







