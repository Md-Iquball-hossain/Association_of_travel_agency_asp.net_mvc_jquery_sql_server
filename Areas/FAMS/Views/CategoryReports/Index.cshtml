
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutjqGrid.cshtml";
}


<link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>
<script src="~/Scripts/KoCustomDateTimePicker.js"></script>
<link href="~/Content/customassets/css/Cart.css" rel="stylesheet" />
<script src="~/Areas/FAMS/Scripts/Category/category_create.js"></script>

<style>
    .form-control {
        width: 100% !important;
    }

    .btnLarge {
        width: 140px !important;
    }

    .input-group-addon {
        padding: 0 5px;
    }

    .rm {
        background-color: #F8F8F8;
        border-radius: 0px 0px 0px 0px !important;
    }
</style>

<section class="rm">
    <div class="panel-body">
        <div class="container-fluid">
            <div class="row">
                <!---vvvvvvv----Body Main Starts here---vvvvvv----->
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-12">
                            @*<section class="panel bodycontent">*@
                            <div id="DepreciationDiv">
                                
                                <div class="form-group row row_design">
                                    <label class="control-label col-sm-2 col-sm-offset-1" for="Level">Category Level</label>
                                    <div class="col-sm-3">
                                        <select data-bind="options: Levels, value: Level,optionsValue:'Id',optionsText: 'Name', optionsCaption: '...Select Level...', event:{ change: getParents}, valueUpdate: 'keyup'"
                                                class="form-control"></select>

                                    </div>
                                    <label class="control-label col-sm-2 " for="AssetCategoryID">Category</label>
                                    <div class="col-sm-3" data-bind="validationElement: Id">
                                        <select id="cat" data-bind="options: CategoryList, value: Id, optionsCaption:'      <--Category-->', optionsValue:'Id',optionsText: 'CategoryName', event:{ change: SearchCategories}, valueUpdate: 'keyup'"
                                                class="form-control"></select>
                                    </div>
                                </div>
                                
                                <br />

                                <div class="form-group table-responsive">

                                    <div class="PrintReport" align="right">
                                        <div class="form-group">
                                            <h4>Export Report</h4>

                                            <a target="_blank" data-bind="attr: { href: Link1, title1: 'PDF' }">PDF</a>
                                            <a target="_blank" data-bind="attr: { href: Link2, title2: 'Excel' }">Excel</a>
                                            <a target="_blank" data-bind="attr: { href: Link3, title3: 'Word' }">Word</a>

                                        </div>
                                        <br/>
                                        <table class="table table-striped table-bordered">
                                            <thead class="headcolor">
                                                <tr class="thead ">
                                                    <th> Name </th>
                                                    <th> Code </th>
                                                    <th> Parent </th>
                                                    <th> Level </th>
                                                    
                                                </tr>
                                            </thead>
                                            <tbody data-bind="foreach:Categories">
                                                <tr>
                                                    <td class="center" data-bind="text: CategoryName"></td>
                                                    <td class="center" data-bind="text: Code"></td>
                                                    <td class="center" data-bind="text: ParentName"></td>
                                                    <td class="center" data-bind="text: LevelName"></td>
                                                    
                                                </tr>
                                            </tbody>
                                        </table>

                                    </div>
                                </div>
                                <div class="form-group">
                                    <div id="successModal" class="modal fade" role="dialog">
                                        <div class="modal-dialog modal-sm">
                                            <!-- Modal content-->
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                    <h4 class="modal-title">Response</h4>
                                                </div>
                                                <div class="modal-body" align="center">
                                                    <p id="successModalText"></p>
                                                    <button type="button" class="btn btn-success" data-dismiss="modal">Ok</button>
                                                </div>
                                                <div class="modal-footer">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*</section>*@
                        <!---^^^^^^^----Body Main Ends here----^^^^^^^---->
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>


