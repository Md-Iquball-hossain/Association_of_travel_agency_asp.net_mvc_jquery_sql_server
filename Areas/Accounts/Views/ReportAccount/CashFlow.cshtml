@{
    Layout = "~/Views/Shared/_LayoutjqGrid.cshtml";
    ViewBag.Title = "Cash Flow";
}

<script src="~/Scripts/knockout-date-bindings.js"></script>
<script src="~/Scripts/numeral.min.js"></script>
<script src="~/Areas/Accounts/Scripts/ReportAccount/cashFlow.js"></script>
<link href="~/Content/customassets/css/CardiacStyle.css" rel="stylesheet" />

<style>
    .form-control {
        width: 100% !important;
    }

    .btnLarge {
        width: 140px !important;
    }

    .input-group-addon {
        padding: 0 5px;
    }

    .rm {
        background-color: #F8F8F8;
        border-radius: 0px 0px 0px 0px !important;
    }
</style>

<div class="panel">
    <div class="panel-body">
        <div id="rptIncomeStatementDiv">

                <div class="row">
                    <div class="form-group">
                        <label class="control-label col-sm-2 ">From Date</label>
                        <div class="col-sm-2">
                            <input type="date" data-bind="value:FromDate, valueUpdate: 'keyup'" class="form-control">@*, event:{ change: setUrl}*@
                        </div>

                        <label class="control-label col-sm-1 ">To Date</label>
                        <div class="col-sm-2">
                            <input type="date" data-bind="value:ToDate, valueUpdate: 'keyup'" class="form-control"> @*, event:{ change: setUrl}*@
                        </div>

                        <div class="col-sm-2">
                            <button type="submit" data-bind="click:getIncomeStatement" class="btn btn-small btn-success">Search</button>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group row row_design" style="margin: 2px 30px;" align="right">

                            <div class="PrintReport">
                                <div class="form-group">
                                    <h4>Export Report</h4>

                                    <a target="_blank" data-bind="attr: { href: Link1, title1: 'PDF' }">PDF</a>
                                    <a data-bind="attr: { href: Link2, title2: 'Excel' }">Excel</a>
                                    <a data-bind="attr: { href: Link3, title3: 'Word' }">Word</a>

                                </div>
                                <br />
                                <div class="form-group table-responsive">
                                    <table class="table table-striped table-bordered" id="datatable-default">
                                        <thead class="headcolor">
                                            <tr>
                                                @*<th class="center">Note Id</th>*@
                                                <th class="center">Activity</th>
                                                <th class="center">Account Head</th>
                                                <th class="center">Current Expense (BDT)</th>
                                                <th class="center">Previous Expense (BDT)</th>
                                            </tr>
                                        </thead>
                                        <tbody data-bind="foreach:CashFlowData">
                                            <tr>

                                                <td data-bind="text: ActivityName"></td>
                                                <td data-bind="text: AccountHead"></td>
                                                <td data-bind="text: Amount"></td>
                                                <td data-bind="text: PrevAmount"></td>


                                                @*<td data-bind="text: numeral(CurrentExpense).format('(0,0.00')"></td>
                                                    <td data-bind="text: numeral(PreviousExpense).format('(0,0.00')"></td>*@
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- loading Modal -->
                <div id="loadingModal" class="modal fade" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="loading-modal-content">

                            <div class="loading" align="center">
                                <img src="~/Images/loadingTwo.gif" style="max-width:100%;" />
                            </div>

                        </div>

                    </div>
                </div>
                <!-- loading modal ends-->

        </div>

    </div>
</div>