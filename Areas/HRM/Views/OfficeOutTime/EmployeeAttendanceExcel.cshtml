<script src="~/Scripts/moment.js"></script>
<script src="~/Areas/HRM/Scripts/AppScripts/ExcelAttendance.js"></script>
<link href="~/Content/customassets/css/Cart.css" rel="stylesheet" />


@{
    ViewBag.Title = "Employee Attendance Excel";
    Layout = "~/Views/Shared/_LayoutjqGrid.cshtml";

}

<div class="panel">
    <br />
    <div class="panel-body">
        <div id="EmpAttendance" method="post" enctype="multipart/form-data" data-bind="submit: AddNewFile">
            <div class="form-group row row_design">
                <label for="UploadedFile" class="control-label col-sm-offset-3 col-sm-1">File :</label>
                <div class="col-sm-3">
                    <input class="form-control" type="file" id="UploadedFile" name="UploadedFile">
                </div>
                <div class="col-sm-1">
                    <button type="submit" data-bind="click:AddNewFile" class="btn btn-success">Save</button>
                </div>
            </div>

            <br/>
            <br/>
            <table class="table table-striped table-bordered">
                <thead class="headcolor">
                    <tr>

                        <th>Employee Code</th>
                        <th>Employee Name</th>
                        <th>Designation</th>
                        <th>Date</th>
                        <th>In Time</th>
                        <th>Out Time</th>
                        <th></th>
                        <!--<input type="hidden" name="hiddenPhone" />-->
                    </tr>

                </thead>
                <tbody data-bind="foreach:Attendances">
                    <tr>
                        <td class="center" data-bind="text: EmpCode"></td>
                        <td class="center" data-bind="text:EmpName"></td>
                        <td class="center" data-bind="text:DesignationName"></td>
                        <td class="center" data-bind="text:moment(Date).format('DD MMM YYYY')"></td>
                        <td class="center" data-bind="text:moment(InTime).format('HH:mm')"></td>
                        <td class="center" data-bind="text:moment(OutTime).format('HH:mm')"></td>
                        <!-- ko if: Late!=0 && OverTime==0 -->
                        <td><span class="badge" style="background-color: #b94a48;">Late</span></td>
                        <!-- /ko -->
                        <!--ko if: OverTime!=0 -->
                        <td><span class="badge" style="background-color: #468847;">Overtime</span></td>
                        <!-- /ko -->

                    </tr>

                </tbody>
            </table>
        </div>

    </div>
</div>