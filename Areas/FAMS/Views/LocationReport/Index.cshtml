
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutjqGrid.cshtml";
}

<script src="~/Areas/FAMS/Scripts/LocationReports/Report.js"></script>
<link href="~/Content/customassets/css/Cart.css" rel="stylesheet" />

<style>
    .form-control {
        width: 100% !important;
    }

    .btnLarge {
        width: 140px !important;
    }

    .input-group-addon {
        padding: 0 5px;
    }

    .rm {
        background-color: #F8F8F8;
        border-radius: 0px 0px 0px 0px !important;
    }
</style>

<section class="rm">
    <div class="panel-body">
        <div class="container-fluid">
            <div class="row">

                <!---vvvvvvv----Body Main Starts here---vvvvvv----->

                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-12">

                           
                                <ul class="nav nav-tabs">
                                    <li class="active"><a data-toggle="tab" href="#LocationDiv">Detail</a></li>
                                    <li><a data-toggle="tab" href="#LocationDivs">Summary</a></li>

                                </ul>

                                <div class="tab-content">
                                    <div id="LocationDiv" class="tab-pane fade in active">

                                        <div class="panel bodycontent">
                                            <br />
                                            <div class="body-main-padding">
                                                @*<section class="panel bodycontent">*@
                                                @*<div id="LocationDiv">*@

                                                <div class="form-group row row_design">
                                                    <label class="control-label col-sm-2 col-sm-offset-1" for="Level">Level</label>
                                                    <div class="col-sm-3" data-bind="validationElement: LevelControl">
                                                        <select data-bind="options: Levels, value: LevelControl,optionsValue:'Id',optionsText: 'Name', optionsCaption: '...Select One...', event:{ change: getAllLocationsAssets}, valueUpdate: 'keyup'"
                                                                class="form-control"></select>

                                                    </div>
                                                    <label class="control-label col-sm-2" for="ParentID">Locations</label>
                                                    <div class="col-sm-3">
                                                        <select data-bind="options: Offices, value: OfficeID,optionsValue:'Id',optionsText: 'LocationTitle',optionsCaption: '...Select Office...', event:{ change: getBuildings}, valueUpdate: 'keyup', visible:showdestoffice" class="form-control"></select>
                                                        <select data-bind="options: Buildings, value: BuildingID,optionsValue:'Id',optionsText: 'LocationTitle',optionsCaption: '...Select Building...', event:{ change: getFloors}, valueUpdate: 'keyup',visible:showdestbuilding" class="form-control"></select>
                                                        <select data-bind="options: Floors, value: FloorID,optionsValue:'Id',optionsText: 'LocationTitle',optionsCaption: '...Select Floor...', event:{ change: getRooms}, valueUpdate: 'keyup',visible:showdestfloor" class="form-control"></select>
                                                        <select data-bind="options: Rooms, value: RoomID,optionsValue:'Id',optionsText: 'LocationTitle',optionsCaption: '...Select Room...', event:{ change: getAllLocationsAssets}, valueUpdate: 'keyup',visible:showdestroom" class="form-control"></select>
                                                        
                                                    </div>
                                                </div>
                                               
                                            </div>
                                            <br />
                                        </div>
                                        <div class="form-group table-responsive">

                                            <div class="col-sm-12">

                                                <div class="PrintReport" align="right">

                                                    <div class="form-group">

                                                        <h4>Export Report</h4>
                                                        <a target="_blank" data-bind="attr: { href: Link1, title1: 'PDF' }">PDF</a>
                                                        <a target="_blank" data-bind="attr: { href: Link2, title2: 'Excel' }">Excel</a>
                                                        <a target="_blank" data-bind="attr: { href: Link3, title3: 'Word' }">Word</a>
                                                    </div>
                                                        <br />
                                                        <table class="table table-striped table-bordered">
                                                            <thead class="headcolor">
                                                                <tr class="thead ">
                                                                    <th> Name </th>
                                                                    <th> Code </th>
                                                                    <th> Category </th>
                                                                    <th> Sub Category </th>
                                                                    <th> Location Name </th>
                                                                </tr>
                                                            </thead>

                                                            <tbody data-bind="foreach:LocationsAssets">
                                                                <tr>
                                                                    <td class="center" data-bind="text: AssetName"></td>
                                                                    <td class="center" data-bind="text: AssetCode"></td>
                                                                    <td class="center" data-bind="text: ParentName"></td>
                                                                    <td class="center" data-bind="text: CategoryName"></td>
                                                                    <td class="center" data-bind="text: LocationName"></td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    <br />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                   
                                
                               


                                <div id="LocationDivs" class="tab-pane fade">
                                    <div class="panel bodycontent">
                                        <br />
                                        <div class="body-main-padding">

                                            @*<section class="panel bodycontent">*@
                                            @*<div id="LocationDiv">*@

                                            <div class="form-group row row_design">
                                                <label class="control-label col-sm-2 col-sm-offset-1" for="Level">Level</label>
                                                <div class="col-sm-3" data-bind="validationElement: LevelControl">
                                                    <select data-bind="options: Levels, value: LevelControl,optionsValue:'Id',optionsText: 'Name', optionsCaption: '...Select One...', event:{ change: getAllLocationsAssets}, valueUpdate: 'keyup'"
                                                            class="form-control"></select>

                                                </div>
                                                <label class="control-label col-sm-2" for="ParentID">Locations</label>
                                                <div class="col-sm-3">
                                                    <select data-bind="options: Offices, value: OfficeID,optionsValue:'Id',optionsText: 'LocationTitle',optionsCaption: '...Select Office...', event:{ change: getBuildings}, valueUpdate: 'keyup', visible:showdestoffice" class="form-control"></select>
                                                    <select data-bind="options: Buildings, value: BuildingID,optionsValue:'Id',optionsText: 'LocationTitle',optionsCaption: '...Select Building...', event:{ change: getFloors}, valueUpdate: 'keyup',visible:showdestbuilding" class="form-control"></select>
                                                    <select data-bind="options: Floors, value: FloorID,optionsValue:'Id',optionsText: 'LocationTitle',optionsCaption: '...Select Floor...', event:{ change: getRooms}, valueUpdate: 'keyup',visible:showdestfloor" class="form-control"></select>
                                                    <select data-bind="options: Rooms, value: RoomID,optionsValue:'Id',optionsText: 'LocationTitle',optionsCaption: '...Select Room...', event:{ change: getAllLocationsAssets}, valueUpdate: 'keyup',visible:showdestroom" class="form-control"></select>
                                                    @*<select data-bind="options: Locations, value: LocationControl,optionsValue:'Id',optionsText: 'LocationTitle', optionsCaption: '...Select One...', valueUpdate: 'keyup' , event:{ change: getAllLocationsAssets},"
                                    class="form-control"></select>*@
                                                </div>
                                            </div>
                                            
                                        </div>
                                        <br />
                                    </div>
                                    <div class="form-group table-responsive">

                                        <div class="col-sm-12">

                                            <div class="PrintReport" align="right">

                                                <div class="form-group">
                                                    <h4>Export Report</h4>
                                                    <a target="_blank" data-bind="attr: { href: Link4, title1: 'PDF' }">PDF</a>
                                                    <a target="_blank" data-bind="attr: { href: Link5, title2: 'Excel' }">Excel</a>
                                                    <a target="_blank" data-bind="attr: { href: Link6, title3: 'Word' }">Word</a>

                                                    </div>
                                                <br/>
                                                    <table class="table table-striped table-bordered">
                                                        <thead class="headcolor">
                                                            <tr class="thead ">
                                                                <th> Location </th>
                                                                <th> Level </th>
                                                                <th> Asset Count </th>

                                                            </tr>
                                                        </thead>

                                                        <tbody data-bind="foreach:LocationsSummary">
                                                            <tr>
                                                                <td class="center" data-bind="text: LocationName"></td>
                                                                <td class="center" data-bind="text: LevelName"></td>
                                                                <td class="center" data-bind="text: AssetCount"></td>

                                                            </tr>
                                                        </tbody>
                                                    </table>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            
                            <div class="form-group">
                                <div id="successModal" class="modal fade" role="dialog">
                                    <div class="modal-dialog modal-sm">
                                        <!-- Modal content-->
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                <h4 class="modal-title">Response</h4>
                                            </div>
                                            <div class="modal-body" align="center">
                                                <p id="successModalText"></p>

                                                <button type="button" class="btn btn-success" data-dismiss="modal">Ok</button>

                                            </div>
                                            <div class="modal-footer">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            @*</div>*@
                            @*</section>*@
                            <!---^^^^^^^----Body Main Ends here----^^^^^^^---->

                        </div>
                               
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
    
</section>


