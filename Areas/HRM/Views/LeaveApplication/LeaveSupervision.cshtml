<div>
    <table id="jqGrid"></table>
    <div id="jqGridPager"></div>
    <div id="jqControls"></div>

</div>
<div class="container">
    <div class="modal fade" id="myModalNorm" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header" style="background-color:#FAEBD7">
                    <button type="button" class="close"
                            data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                        <span class="sr-only">Close</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">
                        Action
                    </h4>
                </div>
                
                <!-- Modal Body -->
                <div class="modal-body">

                    <form role="form"><h5 style="text-align:center;font-weight:bold;">Comment history</h5>
                        
                        <div class="row" data-bind="foreach:CommentList">
                            
                                <div class="span3">
                                    <div class="well">
                                        <div>
                                            <ul class="nav nav-list">
                                                <li>
                                                    <label class="tree-toggle nav-header" data-bind="text:Commenter"></label>
                                                    <ul class="nav nav-list tree">
                                                        <li data-bind="text:Comment"></li>
                                                        
                                                    </ul>
                                                </li>
                                                <li class="divider"></li>
                                                
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                        <div class="form-group">
                            <label for="Comments">Comments</label>
                            <div data-bind="validationElement: SupervisorComments">
                                <textarea class="form-control" data-bind="value:SupervisorComments" rows="5" id="Comments"></textarea>
                            </div>
                            
                        </div>
                        <button type="submit" data-bind="click:function(data,event) {$root.Submit(data,event,2); }" class="btn btn-primary">Approve</button>
                        <button type="submit" data-bind="click:function(data,event) {$root.Submit(data,event,5);}" class="btn btn-danger">Reject</button>
                    </form>


                </div>

                <!-- Modal Footer -->
                <div class="modal-footer" style="background-color:#FAEBD7">
                    <button type="button" class="btn btn-default"
                            data-dismiss="modal">
                        Close
                    </button>
                    
                </div>
            </div>
        </div>
    </div>
</div>
