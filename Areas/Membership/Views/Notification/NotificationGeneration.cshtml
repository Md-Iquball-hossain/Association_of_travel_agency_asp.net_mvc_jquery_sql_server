<style>
    .form-control {
        width: 100% !important;
    }

    .btnLarge {
        width: 140px !important;
    }

    .input-group-addon {
        padding: 0 5px;
    }

    .rm {
        background-color: #F8F8F8;
        border-radius: 0px 0px 0px 0px !important;
    }

    span.required {
        color: red;
        /*font-weight: bold;*/
    }
</style>


<div class="container" id="membershipId">

    

    <div class="tab-content rm">

        <div class="tab-pane fade active in" id="Basic">

            <br />

            <div class="col-sm-12">

                <div class="panel bodycontent">
                    <br />
                    <div class="body-main-padding">

                        <div class="form-group row row_design">

                            <label class="control-label col-sm-2 col-sm-offset-1">Recipients :</label>
                            <div class="col-sm-3">
                                <select multiple="multiple" id="RecipientsList" class="form-control" data-bind="options: RecipientsList, optionsText: 'NameOfOrganization', optionsValue: 'Id', selectedOptions: Recipients , multiselect: { includeSelectAllOption: true }"></select>

                            </div>

                            <label class="control-label col-sm-2 col-sm-offset-1">Priority :</label>
                            <div class="col-sm-3">
                                @*<select multiple="multiple" id="companySelection" class="form-control" data-bind="options: ChamberList, optionsText: 'Name', optionsValue: 'Id', selectedOptions: Chambers, multiselect: { includeSelectAllOption: False }"></select>*@
                                <select id="prioritySelection" class="form-control" data-bind="options: PriorityTypeList, optionsText: 'Name', optionsValue: 'Id', optionsCaption : '--Select--', selectedOptions: PriorityType"></select>

                            </div>

                        </div>

                        <div class="form-group row row_design">
                            <label class="control-label col-sm-2 col-sm-offset-1">Subject :</label>
                            <div class="col-sm-3">
                                <input class="form-control" id="Subject" type="text" data-bind="value:Subject" />
                            </div>

                        </div>
                        <div class="form-group row row_design">
                            <div class="col-sm-2 col-sm-offset-1">
                                <label class="control-label">Message :</label>
                            </div>
                            <div class="col-sm-3">
                                <textarea class="form-control" data-bind="value: NotificationMessage"></textarea>
                            </div>

                        </div>
                    </div>
                    <br />
                </div>
            </div>
            </div>

            <br />


            <div class="button col-sm-offset-9">
                <button type="submit" data-bind="click:saveNotification" class="btn btn-success">Save</button>
                @*<button type="reset" class="btn btn-danger">Clean</button>*@
                @*<button class="btn btn-warning pull-right" data-bind="click:RunPatch">Run Patch</button>*@

            </div>
            <br />
            @*</form>*@
        </div>
   </div>
     
    <!--end modal body>-->
    <!--Start modal body>-->
    <div class="form-group">
        <div id="successModal" class="modal fade" role="dialog">
            <div class="modal-dialog modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Response</h4>
                    </div>
                    <div class="modal-body" align="center">
                        <p id="successModalText"></p>

                        <button type="button" class="btn btn-success" data-dismiss="modal">Ok</button>

                    </div>
                    <div class="modal-footer">
                    </div>
                </div>
            </div>
        </div>
    </div>
